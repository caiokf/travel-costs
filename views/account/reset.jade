extends ../layout

block content
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      legend= t('account.resetPassword')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label(for='password')= t('account.newPassword')
        input.form-control(type='password', name='password', value='', placeholder=t('account.newPassword'), autofocus=true)
      .form-group
        label(for='confirm')= t('account.confirmPassword')
        input.form-control(type='password', name='confirm', value='', placeholder=t('account.confirmPassword'))
      .form-group
        button.btn.btn-primary.btn-reset(type='submit')
          i.fa.fa-keyboard-o
          = t('account.changePassword')
