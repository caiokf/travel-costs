extends ../layout

block content
  .page-header
    h3= t('account.signin')
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='email')= t('account.email')
      .col-sm-7
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
    .form-group
      label.col-sm-3.control-label(for='password')= t('account.password')
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Password')
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit')
          i.fa.fa-user
          = t('account.login')
        a.btn.btn-link(href='/forgot')= t('forgotPasswordQuestion')
    .form-group
      .col-sm-offset-3.col-sm-7
        hr
    .form-group
      .col-sm-offset-3.col-sm-7
        a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
          i.fa.fa-facebook
          = t('account.signinFacebook')
        a.btn.btn-block.btn-google.btn-social(href='/auth/google')
          i.fa.fa-google-plus
          = t('account.signinGoogle')
        a.btn.btn-block.btn-github.btn-social(href='/auth/github')
          i.fa.fa-github
          = t('account.signinGithub')
        
